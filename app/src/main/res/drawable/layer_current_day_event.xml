<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa inferior: fondo rosa redondeado para eventos -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fcdbff"/> <!-- o el rosa que uses -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Capa superior: borde del dÃ­a actual -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="#80209d" />
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
