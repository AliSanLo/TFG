<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Layout vertical de la pantalla -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Toolbar y AppBar -->
            <include
                layout="@layout/app_bar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Días de la semana -->
            <include
                android:id="@+id/titlesContainer"
                layout="@layout/calendar_days_name_container" />

            <!-- Calendario -->
            <com.kizitonwose.calendar.view.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cv_dayViewResource="@layout/calendar_day"
                app:cv_daySize="seventhWidth"
                app:cv_outDateStyle="endOfGrid" />
        </LinearLayout>



        <LinearLayout
        android:id="@+id/floatingMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/menuOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Evento"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:background="?android:attr/selectableItemBackground" />
        <TextView
            android:id="@+id/menuOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Eventos"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>


        <ImageView
            android:id="@+id/addButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/add_event"
            android:elevation="6dp"
            android:visibility="gone"
            android:rotation="0"/>
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="232dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
